<% error = @account.errors.include?(:name) %>
<div class="control-group <%= error ? 'has-error' : ''%>">
  <%= f.label '用户名', :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :name, :class => 'input-xlarge', :autofocus => true %>
  </div>
</div>
<br>

<% error = @account.errors.include?(:surname) %>
<div class="control-group <%= error ? 'has-error' : ''%>">
  <%= f.label '学号', :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :surname, :class => 'input-xlarge' %>
  </div>
</div>
<br>

<% error = @account.errors.include?(:email) %>
<div class="control-group <%= error ? 'has-error' : ''%>">
  <%= f.label '邮箱', :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :email, :class => 'input-xlarge' %>
  </div>
</div>
<br>

<% error = @account.errors.include?(:password) %>
<div class="control-group <%= error ? 'has-error' : ''%>">
  <%= f.label '密码', :class => 'control-label' %>
  <div class='controls'>
    <%= f.password_field :password, :class => 'input-xlarge' %>
  </div>
</div>
<br>

<% error = @account.errors.include?(:password_confirmation) %>
<div class="control-group <%= error ? 'has-error' : ''%>">
  <%= f.label '确认密码', :class => 'control-label' %>
  <div class='controls'>
    <%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
  </div>
</div>
<br>

<% error = @account.errors.include?(:role) %>
<div class="control-group <%= error ? 'has-error' : ''%>">
  <div class='controls'>
    <%= f.hidden_field :role, :class => 'input-xlarge', :value => @account.role || 'user' %>
  </div>
</div>
<br>

<div class="form-actions">
  <%= f.submit '保 存', :class => 'btn btn-primary span4 pull-left' %>
  &nbsp;&nbsp;&nbsp;
  <%= link_to '取 消', url(:index), :class => 'btn span4 pull-right' %>
</div>
