<div class="row-fluid">
  <!-- <h1>New Account</h1> -->
</div>

<div class="row-fluid">
  <div class="span6 offset3 login-form">

<% form_tag '/accounts/create', :class => 'form form-horizontal', :method => 'post' do %>
  <%= flash_tag(:notice) %>
  <% field_set_tag do %>
    <p>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </p>
    <p>
      <%= label_tag :second_name %>
      <%= text_field_tag :second_name %>
    </p>
    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= label_tag :password_confirm %>
      <%= password_field_tag :password_confirm %>
    </p>
  <% end %>
  <% field_set_tag do %>
    <%= submit_tag "Add+", :class => 'btn btn-primary btn-large' %>
  <% end %>
<% end %>

  </div>
</div>