
<div class="row">
  
  <% if @unread_messages or @read_messages %>
    <table class="table table-striped table-hover">
      <caption><h2>消息</h2></caption>
      <thead>
        <tr>
          <th>创建时间</th>
          <th>内容</th>
          <th>状态</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="unread-msg">
        <%= partial 'messages/message', :collection => @unread_messages %>
      </tbody>
      <tbody id="read-msg">
        <%= partial 'messages/message', :collection => @read_messages %>
      </tbody>
    </table>
  <% else %>
    <p>您目前没有任何消息 :)</p>
  <% end %>

</div>
